{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@listforge/core-types": ["../../packages/core-types/src"],
      "@listforge/api-types": ["../../packages/api-types/src"],
      "@listforge/socket-types": ["../../packages/socket-types/src"],
      "@listforge/api-rtk": ["../../packages/api-rtk/src"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
