# Stage 1: Prune monorepo for Web only
FROM node:20-alpine AS pruner
RUN corepack enable && corepack prepare pnpm@8.15.0 --activate
WORKDIR /app
COPY . .
RUN pnpm dlx turbo prune listforge-web --docker

# Stage 2: Install dependencies
FROM node:20-alpine AS installer
RUN corepack enable && corepack prepare pnpm@8.15.0 --activate
WORKDIR /app
COPY --from=pruner /app/out/json/ .
COPY --from=pruner /app/out/pnpm-lock.yaml ./pnpm-lock.yaml
RUN pnpm install --frozen-lockfile

# Stage 3: Build (with build-time env vars)
FROM node:20-alpine AS builder
RUN corepack enable && corepack prepare pnpm@8.15.0 --activate
WORKDIR /app
COPY --from=installer /app/ .
COPY --from=pruner /app/out/full/ .
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL
RUN pnpm turbo build --filter=listforge-web

# Stage 4: Serve with nginx
FROM nginx:alpine AS runner
# Reduce worker processes to save memory
RUN sed -i 's/worker_processes  auto/worker_processes  1/' /etc/nginx/nginx.conf
COPY --from=builder /app/apps/listforge-web/dist /usr/share/nginx/html
COPY apps/listforge-web/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

